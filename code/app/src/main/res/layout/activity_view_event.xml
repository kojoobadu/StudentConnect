<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group339.cyconnect.activities.event.ViewEventActivity"
    android:id="@+id/bc">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_event_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_event_button"
        android:layout_alignTop="@+id/edit_event_button"
        android:layout_toRightOf="@+id/edit_event_button"
        android:layout_toEndOf="@+id/edit_event_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UpVote"
        android:id="@+id/up_vote_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/delete_event_button"
        android:layout_toEndOf="@+id/delete_event_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DownVote"
        android:id="@+id/down_vote_button"
        android:layout_alignTop="@+id/up_vote_button"
        android:layout_toRightOf="@+id/up_vote_button"
        android:layout_toEndOf="@+id/up_vote_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_text"
        android:layout_below="@+id/one_event_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:id="@+id/event_name_label"
        android:layout_below="@+id/event_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_description_text"
        android:layout_below="@+id/event_name_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:id="@+id/event_description_label"
        android:layout_below="@+id/event_description_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text1"
        android:id="@+id/event_owner_text"
        android:layout_below="@+id/event_description_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Owner"
        android:id="@+id/event_owner_label"
        android:layout_below="@+id/event_owner_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text3"
        android:id="@+id/event_ranking_text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Ranking"
        android:id="@+id/event_ranking_label"
        android:layout_below="@+id/event_ranking_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
