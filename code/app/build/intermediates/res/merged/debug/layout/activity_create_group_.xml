<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group339.cyconnect.activities.group.CreateGroupActivity"
    android:id="@+id/layout">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveButton"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/groupName"
        android:layout_alignStart="@+id/groupName"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_group_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/saveButton"
        android:layout_alignEnd="@+id/saveButton"
        android:hint="GroupName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_description"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/description"
        android:layout_alignEnd="@+id/description"
        android:visibility="visible"
        android:typeface="normal"
        android:scrollIndicators="top|bottom"
        android:inputType="textImeMultiLine|text"
        android:editable="true"
        android:hint="GroupDescription"/>
</RelativeLayout>
