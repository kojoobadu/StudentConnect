<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group339.cyconnect.activities.book.ViewBookActivity"
    android:id="@+id/bc">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_book_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_book_button"
        android:layout_alignTop="@+id/edit_book_button"
        android:layout_toRightOf="@+id/edit_book_button"
        android:layout_toEndOf="@+id/edit_book_button" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:id="@+id/book_name_label"
        android:layout_below="@+id/book_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_description_text"
        android:layout_below="@+id/book_name_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Description"
        android:id="@+id/book_description_label"
        android:layout_below="@+id/book_description_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text1"
        android:id="@+id/book_owner_text"
        android:layout_below="@+id/book_description_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Owner"
        android:id="@+id/book_owner_label"
        android:layout_below="@+id/book_owner_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:id="@+id/chat_book_comment"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/delete_book_button"
        android:layout_toEndOf="@+id/delete_book_button" />


</RelativeLayout>
